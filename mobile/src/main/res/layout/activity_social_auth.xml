<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_social_auth"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Features.Auth.SocialAuthActivity"
    >

  <TextView
      android:id="@+id/tvName"
      android:layout_height="wrap_content"
      tools:layout_editor_absoluteY="287dp"
      android:layout_width="wrap_content"
      app:layout_constraintLeft_toLeftOf="@+id/activity_social_auth"
      android:layout_marginLeft="16dp"
      android:layout_marginStart="16dp"
      app:layout_constraintRight_toRightOf="@+id/activity_social_auth"
      android:layout_marginRight="16dp"
      android:layout_marginEnd="16dp" />

  <com.google.android.gms.common.SignInButton
      android:id="@+id/sign_in_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintLeft_toLeftOf="@+id/activity_social_auth"
      android:layout_marginLeft="16dp"
      android:layout_marginStart="16dp"
      app:layout_constraintTop_toTopOf="@+id/activity_social_auth"
      android:layout_marginTop="16dp"
      app:layout_constraintRight_toRightOf="@+id/activity_social_auth"
      android:layout_marginRight="16dp"
      android:layout_marginEnd="16dp"
      app:layout_constraintBottom_toBottomOf="@+id/activity_social_auth"
      android:layout_marginBottom="16dp" />


</android.support.constraint.ConstraintLayout>
